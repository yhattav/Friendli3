<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            </br>
            <div class="bg-white">
                <button class="btn btn-info btnToggle btn-block"><i class="fa fa-arrow-down toggler">&nbsp;</i> Create a new Friend! <i class="fa fa-arrow-down toggler">&nbsp;</i></button>
                <div class="external">
                    <form  id="createFriend">
                        <div class="form-group">
                            <input id="Friend-deathtime" name="deathTime" type="hidden" class="form-control" value="90">
                            <label for="Name-Input">Use this Box to create a new friend</label>
                            <textarea name="name" id="friend-name" class="form-control" rows="1" required placeholder="Enter your friend's name"></textarea>
                            <label for="Date-Input">When did you last talk to him?</label>
                            <input id="Friend-latest" name="latest" type="date" class="form-control" >
                            <label for="Name-Input">What can you tell us about him?</label>
                            <textarea name="info" id="friend-info" class="form-control" rows="2" placeholder="e.g. His wife's name is Ellie, His Dog's name is Rex"></textarea>
                            <div class="form-group">
                                <div class="">
                                <button type="submit" class="btn btn-success btn-block">Add New Friend!</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
              </div>
          </div>
        
        
        
        
        <div class="col-md-8">
            
            <div class="row ">
                </br>
                <div class="col-md-11 col-md-offset-0 ">
                    <ul class="list-group bounceInUp">
                    <% for (var i = data.length - 1; i >= 0; i--) { %>
                    <li class="list-group-item animated bounceInUp bg-white">
                    <div class="media">
                        <div class="media-body">
                           
                            <div class="media btnToggle">
                                <div class="media-left">
                                    <h4 class="media-heading"><%= data[i].name %></h4>
                                </div>
                                <div class="media-body">
                                                            <!-- the progress bars -->   
                                    <div style=" padding-right: 30px;">                         
                                        <div class="OuterSingleBar">
                                            <div class="progress btnToggle" id='progress<%= i%>'></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="external">
                                
                                <a href="#" class="deleteFriend" action="/friends/destroy/<%= data[i].id %>">
                                <i class="fa fa-trash-o ">&nbsp;</i>delete</a>
                                <span> · </span>
                                                                <a href="#" class="updateFriend"
                                        action="/friends/update/<%= data[i].id %>?update=<%= parseInt(data[i].latest || 0)  %>">
                                <i class="fa fa-calendar-check-o">&nbsp;</i>latest (<%= (data[i].latest || 0) %>)</a>
                                <span> · </span>
                            
                                <a href="/friends/<%= data[i].id %>">
                                <i class="fa fa-clock-o ">&nbsp;</i><%= new Date(data[i].updatedAt).toLocaleString() %></a>
                            </p>
                            <div class="row external">
                                 <div class="col-lg-4">    
                                    <form id="updateFriend" class="updateFriend" action="/friends/update/<%= data[i].id %>?update=<%= parseInt(data[i].latest || 0)  %>">
                                        <div class="input-group">
                                        <input id="Friend-latest" name="latest" type="date" class="form-control" value="<%=data[i].latest %>">
                                        <span class="input-group-btn">
                                        
                                            <button type="submit" class="btn btn-success " >Update!</button>
                                        
                                        </span>
                                        </div>
                                    </form>
                                </div><!-- /.col-lg-4 -->
                                <div class="col-lg-1">
                                    
                                </div><!-- /.col-lg-1 -->
                                <div class="col-lg-7">
                                    <p><%= data[i].info %></p>
                                </div><!-- /.col-lg-7 -->

                        </div>
                    </div>
                    </li>
                    </br>
                    <% } %>
                    </ul>
                </div>
            </div>

        </div>
        
        
        <div class="col-md-1">
            
        </div>
    </div>
</div>
